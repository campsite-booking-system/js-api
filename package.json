{
  "name": "@vulpee/js-api",
  "description": "A Javascript library with the different API's for Vulpee's services",
  "version": "0.5.0",
  "main": "lib/index",
  "module": "lib/index",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vulpee/js-api"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@types/node": "^12.7.3",
    "husky": "^3.0.5",
    "jest-fetch-mock": "^2.1.2",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf lib",
    "lint": "tslint 'src/**/*.{ts}' && prettier --check 'src/**/*.ts'",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "tslint",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0"
  }
}
