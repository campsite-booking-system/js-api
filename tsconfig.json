{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
